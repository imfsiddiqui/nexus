# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# HTML, CSS, JavaScript, JSON, and TypeScript
[*.{html,css,js,jsx,json,ts,tsx}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Python
[*.py]
indent_size = 4

# YAML
[*.yml]
indent_size = 2
