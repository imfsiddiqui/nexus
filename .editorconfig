# ------------------------------------------------------------------------------
# EditorConfig configuration file
# https://editorconfig.org
# ------------------------------------------------------------------------------

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# CSS
[*.css]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# Go
[*.go]
indent_style = tab

# HTML
[*.html]
indent_size = 2

# JavaScript
[*.{js,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# JSONC
[*.jsonc]
indent_size = 2

# Markdown
[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false

# Shell Scripts
[*.{sh,bash,zsh,fish,dash,tcsh,csh,ksh}]
indent_size = 2

# SVG
[*.svg]
indent_size = 2

# TOML
[*.toml]
indent_size = 2

# Visual Studio Code (VS Code) Workspace
[*.code-workspace]
indent_size = 2

# XML
[*.xml]
indent_size = 2

# YAML
[*.{yaml,yml}]
indent_size = 2
